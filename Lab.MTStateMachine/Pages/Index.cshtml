@page
@model Lab.MTStateMachine.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Tomato"></label>
        <input class="form-control" placeholder="TomatoId" name="Tomato" autofocus>
        <input type="submit" class="btn btn-primary" name="button" value="Chop Tomato">
    </div>
    <div class="form-group">
        <label asp-for="Cucumber"></label>
        <input class="form-control" placeholder="CucumberId" name="Cucumber" autofocus>
        <input type="submit" class="btn btn-primary" name="button" value="Chop Cucumber">
    </div>
</form>